<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- Daftar pilihan kendala -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvReasons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:padding="8dp"
        android:scrollbars="vertical"
        android:overScrollMode="always" />

    <!-- Input untuk kendala khusus -->
    <EditText
        android:id="@+id/etCustomReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/masukkan_kendala_khusus"
        android:inputType="text" />

    <!-- Tombol untuk membatalkan pengantaran -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancel_transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semi_bold"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="10dp"
        android:text="@string/batalkan_pengantaran"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:backgroundTint="@android:color/holo_red_light"
        app:strokeColor="@android:color/holo_red_light"
        app:strokeWidth="2dp" />

</LinearLayout>
