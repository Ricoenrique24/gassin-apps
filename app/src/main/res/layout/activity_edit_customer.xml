<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyLight"
    tools:context=".ui.pages.manager.customer.edit.EditCustomerActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_gravity="start|center_vertical"
            android:gravity="start|center_horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/darkGreen"
                android:padding="2dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp"
                app:strokeWidth="0dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_back_24dp"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:textAlignment="center"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="@string/edit_pelanggan"
                android:textSize="20sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ed_customer_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        app:startIconDrawable="@drawable/ic_shop_24dp"
        app:startIconTint="@color/darkGreen"
        app:startIconContentDescription="@string/masukkan_nama_pelanggan"
        app:boxBackgroundColor="@color/white"
        app:boxCornerRadiusTopStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusBottomEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar">
        <com.naffeid.gassin.ui.components.EditText
            android:id="@+id/ed_customer_name"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:hint="@string/masukkan_nama_pelanggan"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ed_customer_link_map_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        app:startIconTint="@color/darkGreen"
        app:startIconDrawable="@drawable/ic_location_24dp"
        app:startIconContentDescription="@string/masukkan_link_google_map_alamat_pelanggan"
        app:boxBackgroundColor="@color/white"
        app:boxCornerRadiusTopStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusBottomEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_customer_name_layout">
        <com.naffeid.gassin.ui.components.EditText
            android:id="@+id/ed_customer_link_map"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:hint="@string/masukkan_link_google_map_alamat_pelanggan"
            android:inputType="text"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ed_customer_address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        app:startIconDrawable="@drawable/ic_note_24dp"
        app:startIconTint="@color/darkGreen"
        app:startIconContentDescription="@string/masukkan_patokan_alamat_pelanggan"
        app:boxBackgroundColor="@color/white"
        app:boxCornerRadiusTopStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusBottomEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_customer_link_map_layout">
        <com.naffeid.gassin.ui.components.EditText
            android:id="@+id/ed_customer_address"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:hint="@string/masukkan_patokan_alamat_pelanggan"
            android:inputType="text"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ed_customer_phone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        app:startIconDrawable="@drawable/ic_phone_24dp"
        app:startIconTint="@color/darkGreen"
        app:startIconContentDescription="@string/masukkan_nomer_telepon_pelanggan"
        app:boxBackgroundColor="@color/white"
        app:boxCornerRadiusTopStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusBottomEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_customer_address_layout">
        <com.naffeid.gassin.ui.components.EditText
            android:id="@+id/ed_customer_phone"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:hint="@string/masukkan_nomer_telepon_pelanggan"
            android:inputType="number"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ed_customer_price_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        app:startIconDrawable="@drawable/ic_moneys_24dp"
        app:startIconTint="@color/darkGreen"
        app:startIconContentDescription="@string/masukkan_harga_gas_pelangganl"
        app:boxBackgroundColor="@color/white"
        app:boxCornerRadiusTopStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusBottomEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_customer_phone_layout">
        <com.naffeid.gassin.ui.components.EditText
            android:id="@+id/ed_customer_price"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:hint="@string/masukkan_harga_gas_pelangganl"
            android:inputType="numberDecimal"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_update_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="10dp"
        android:text="@string/simpan"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_semi_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_customer_price_layout"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>